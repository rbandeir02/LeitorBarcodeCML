<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:srcCompat="@mipmap/cmllogo_foreground" />

    <Button
        android:id="@+id/btnLerCodBarras"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/imgqrcode_foreground"
        android:text="    Ler CÃ³digo de Barras    " />


    <TextView
        android:id="@+id/txtViatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="Viatura: "
        android:textColor="#000000" />
    <TextView
        android:id="@+id/txtData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textColor="#000000"
        android:text="Data e Hora: " />
    <TextView
        android:id="@+id/txtCota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textColor="#000000"
        android:text="Cota: " />
    <TextView
        android:id="@+id/txtQtdAut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:textColor="#000000"
        android:paddingBottom="20dp"
        android:text="Quantidade Autorizada: " />

    <Button
        android:id="@+id/btnFechar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="QuitApp"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_gravity="center_horizontal"
        android:text="    Fechar    " />

</LinearLayout>